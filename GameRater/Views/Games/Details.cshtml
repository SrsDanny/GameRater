@model GameRater.DAL.Models.Game

@{
    ViewBag.Title = Model.Title;
}

<h2 class="game-details-title">@Model.Title</h2>

<div class="row">
    <div class="col-md-3">
        <img class="game-details-cover" src="@Model.ImageUrl"/>
        @Html.Partial("StarsRating", Model.ReviewScore)
    </div>
    <div class="col-md-9">
        <h3>Summary</h3>
        <p>@Model.Summary</p>
    </div>
</div>

<h2>Reviews</h2>
<ul class="game-reviews-list">
    @foreach (var review in Model.Reviews)
    {
        <li>
            @review.Content
        </li>
    }
</ul>

<p>
    @Html.ActionLink("Edit", "Edit", new {id = Model.Id}) |
    @Html.ActionLink("Back to List", "Index")
</p>
